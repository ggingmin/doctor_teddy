<p id="notice"><%= notice %></p>

<h1>Examinations</h1>

<%= month_calendar(attribute: :exdate, events: @examinations) do |date, examinations| %>
  <%= date.day %>
  <% examinations.each do |examination| %>
    <div>
      <%= examination.hname %>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Examine time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @examinations.each do |examination| %>
      <tr>
        <td><%= examination.hname %></td>
        <td><%= examination.symptom %></td>
        <td><%= link_to 'Show', examination %></td>
        <td><%= link_to 'Edit', edit_examination_path(examination) %></td>
        <td><%= link_to 'Destroy', examination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Examination', new_examination_path %>


